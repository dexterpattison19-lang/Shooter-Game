<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Space Shooter</title>
  <style>
    body {
      margin: 0;
      background: black;
      color: white;
      text-align: center;
      font-family: Arial;
    }
    canvas {
      background: #111;
      display: block;
      margin: auto;
      touch-action: none;
    }
  </style>
</head>
<body>

<h2>ðŸš€ Space Shooter</h2>
<canvas id="game" width="360" height="600"></canvas>
<p>Touch to move & shoot</p>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

let player = { x: 160, y: 550, w: 40, h: 20 };
let bullets = [];
let enemies = [];
let score = 0;
let gameOver = false;
let touchX = null;

function shoot() {
  bullets.push({ x: player.x + 18, y: player.y });
}

// Touch
canvas.addEventListener("touchstart", e => {
  const r = canvas.getBoundingClientRect();
  touchX = e.touches[0].clientX - r.left;
  shoot();
});
canvas.addEventListener("touchmove", e => {
  const r = canvas.getBoundingClientRect();
  touchX = e.touches[0].clientX - r.left;
});
canvas.addEventListener("touchend", () => touchX = null);

// Keyboard
document.addEventListener("keydown", e => {
  if (e.key === "ArrowLeft") player.x -= 20;
  if (e.key === "ArrowRight") player.x += 20;
  if (e.key === " ") shoot();
});

function spawnEnemy() {
  enemies.push({
    x: Math.random() * 330,
    y: 0,
    w: 30,
    h: 20
  });
}

function update() {
  if (gameOver) {
    ctx.fillStyle = "white";
    ctx.fillText("GAME OVER", 130, 300);
    return;
  }

  ctx.clearRect(0, 0, 360, 600);

  if (touchX !== null) player.x = touchX - 20;
  player.x = Math.max(0, Math.min(320, player.x));

  ctx.fillStyle = "cyan";
  ctx.fillRect(player.x, player.y, 40, 20);

  ctx.fillStyle = "yellow";
  bullets.forEach((b, i) => {
    b.y -= 8;
    if (b.y < 0) bullets.splice(i, 1);
    ctx.fillRect(b.x, b.y, 4, 10);
  });

  ctx.fillStyle = "red";
  enemies.forEach((e, ei) => {
    e.y += 2;
    ctx.fillRect(e.x, e.y, e.w, e.h);
    if (e.y > 580) gameOver = true;
  });

  bullets.forEach((b, bi) => {
    enemies.forEach((e, ei) => {
      if (
        b.x < e.x + e.w &&
        b.x + 4 > e.x &&
        b.y < e.y + e.h &&
        b.y + 10 > e.y
      ) {
        bullets.splice(bi, 1);
        enemies.splice(ei, 1);
        score++;
      }
    });
  });

  ctx.fillStyle = "white";
  ctx.fillText("Score: " + score, 10, 20);

  requestAnimationFrame(update);
}

setInterval(spawnEnemy, 1000);
update();
</script>

</body>
</html>
